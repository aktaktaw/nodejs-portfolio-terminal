
<div class="container">
    <h1>Portfolio</h1>
    <div class="row">
        <% for(x=0; x<portfolios.length; x++){ %>
        <div class="col-sm-6 col-md-4 col-lg-3 mt-4">
            <div class="card">
                <img class="card-img-top" src="<%= portfolios[x].img %> ">
                <div class="card-block padding">
                    <h4 class="card-title"><%= portfolios[x].name%></h4>
                    <div class="card-text">
                        <p><%= portfolios[x].description%></p>
                        <p style="font-size: small;"><b><%= portfolios[x].tech%></b></p>
                    </div>
                </div>
                <div class="card-footer">
                    <span class="text-muted"><%= portfolios[x].category%></span>
                </div>
            </div>
        </div>
        <% }%>
    </div>
</div>